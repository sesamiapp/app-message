{
    "compilerOptions": {
      "outDir": "./build",
      "module": "ESNext",
      "moduleResolution": "node",
      "target": "ES6",
      "declaration": false,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "build"]
}
