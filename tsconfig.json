{
    "exclude": ["node_modules", "build"],
    "compilerOptions": {
        "lib": ["ESNext", "DOM"],
        "module": "System",
        "target": "ESNext",
        "moduleDetection": "force",
        "moduleResolution": "Node",
        "outFile": "./build/index.js",
        "declaration": true,
        "skipLibCheck": true,
        "strict": true
    }
}
