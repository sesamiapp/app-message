{
    "exclude": ["node_modules", "build"],
    "compilerOptions": {
        "lib": ["ESNext", "DOM"],
        "module": "ESNext",
        "target": "ESNext",
        "moduleDetection": "force",
        "moduleResolution": "Node",
        "outDir": "build",
        "declaration": true,
        "declarationDir": "build",
        "skipLibCheck": true,
        "strict": true
    }
}
